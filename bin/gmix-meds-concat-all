#!/usr/bin/env python
"""
    %prog [options] goodlist badlist ftype

The combined output name will be derived from the input files, e.g.

    gfme001it-DES0700-5457-i-020000-020999-lmfit.fits

is converted to

    gfme001it-DES0700-5457-i-lmfit.fits
    
"""

import sys
import json
import fitsio

import gmix_meds

from optparse import OptionParser
parser = OptionParser(__doc__)

def main():
    options, args = parser.parse_args(sys.argv[1:])
    if len(args) < 3:
        parser.print_help()
        sys.exit(45)

    goodlist=args[0]
    badlist=args[1]
    ftype=args[2]

    gmix_meds.collate.concat_all(goodlist,badlist,ftype)

main()
