#!/usr/bin/env python
"""
    %prog [options] run table_name

e.g.
    gfme004grizt ngmix001
"""

import sys
import gmix_meds

from optparse import OptionParser
parser = OptionParser(__doc__)

parser.add_option('--noblind',action='store_true',
                  help="use unblinded catalog")
parser.add_option('--nsplit',default=None,
                  help="use this number of split")
parser.add_option('--split',default=None,
                  help="process this split")

def main():
    options, args = parser.parse_args(sys.argv[1:])
    if len(args) < 2:
        parser.print_help()
        sys.exit(45)

    run=args[0]
    table_name=args[1]

    if options.noblind:
        blind=False
    else:
        blind=True

    if options.nsplit is not None:
        nsplit=int(options.nsplit)
        if options.split is None:
            raise ValueError("send --split with --nsplit")
        split=int(options.split)

        gmix_meds.dbload.make_oracle_input_split(run,
                                                 table_name,
                                                 nsplit,
                                                 split,
                                                 blind=blind)


    else:
        gmix_meds.dbload.make_all_oracle_input(run,
                                               table_name,
                                               blind=blind)

main()
